{
  "name": "appboardguru-playwright-mcp-tests",
  "version": "1.0.0",
  "description": "Playwright MCP E2E Testing Suite for AppBoardGuru",
  "scripts": {
    "test": "playwright test --config=config/playwright-mcp.config.ts",
    "test:auth": "playwright test tests/auth-flow.spec.ts --config=config/playwright-mcp.config.ts",
    "test:board": "playwright test tests/board-management.spec.ts --config=config/playwright-mcp.config.ts",
    "test:assets": "playwright test tests/asset-vault-management.spec.ts --config=config/playwright-mcp.config.ts",
    "test:ui": "playwright test --ui --config=config/playwright-mcp.config.ts",
    "test:debug": "playwright test --debug --config=config/playwright-mcp.config.ts",
    "test:headed": "playwright test --headed --config=config/playwright-mcp.config.ts",
    "test:codegen": "playwright test --project=mcp-codegen --config=config/playwright-mcp.config.ts",
    "codegen": "playwright codegen localhost:3000",
    "report": "playwright show-report __tests__/e2e/playwright-mcp/reports/html",
    "install": "playwright install",
    "install-deps": "playwright install-deps"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  }
}